%article.video_category
  - @categories.each do |cat|
    %header
      %h3= link_to cat.name, cat.name
    .videos.row
      - @videos.each do |v|
        - if v.category_id == cat.id
          .video.col-sm-2
            = image_tag v.small_cover_url


